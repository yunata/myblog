{
    "name": "your/myblog",
    "description": "Simple PHP blog application",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": [
                "src/",
                "includes/"
            ]
        },
        "files": [
            "includes/auth.php",
            "includes/session.php",
            "includes/database.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}